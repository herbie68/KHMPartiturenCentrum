<Page
    x:Class="KHMPartiturenCentrum.Views.Scores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KHMPartiturenCentrum.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:KHMPartiturenCentrum.Views"
    xmlns:viewmodel="clr-namespace:KHMPartiturenCentrum.ViewModels"
    Title="Scores"
    d:DesignHeight="700"
    d:DesignWidth="1600"
    DataContext="viewmodel:ScoreViewModel"
    mc:Ignorable="d">

    <Page.Resources>
        <viewmodel:ScoreViewModel x:Key="ScoresData"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region Header-->
        <Border
            Grid.Row="0"
            Height="50"
            Margin="10"
            Padding="0"
            Background="{DynamicResource Header.BackGround}"
            BorderBrush="{DynamicResource Header.BorderBrush}"
            BorderThickness=".5"
            CornerRadius="10">

            <StackPanel Orientation="Horizontal">
                <Image
                    Height="30"
                    Margin="5,0,5,0"
                    Source="..\Resources\Images\logo.png" />
                <Label
                    Margin="0,3"
                    HorizontalAlignment="Center"
                    Content="Partituren overzicht"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{DynamicResource Header.Title.TextColor}" />
            </StackPanel>
        </Border>
        <!--#endregion-->

        <!--#region Action Buttons-->
        <Grid
            Grid.Row="1"
            Margin="25,0,25,0"
            Loaded="PageLoaded">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    x:Name="btnPrev"
                    Width="30"
                    Height="30"
                    Padding="5"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Navigate}"
                    ToolTip="Vorige partituur"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource previous}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Navigate.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnNext"
                    Width="30"
                    Height="30"
                    Padding="5"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Navigate}"
                    ToolTip="Vorige partituur"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource next2}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Navigate.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnSave"
                    Width="30"
                    Height="30"
                    Padding="4"
                    CommandParameter="{Binding SelectedItem, ElementName=FactsheetsDataGrid}"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Save}"
                    ToolTip="Edit the selected factsheet"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource save}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Save.BorderBrush}" />
                </Button>
            </StackPanel>
        </Grid>
        <!--#endregion-->

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--#region Datagrid Scores-->
            <DataGrid
                x:Name="ScoresDataGrid"
                Grid.Column="0"
                Padding="5,0,5,0"
                AlternationCount="1"
                AutoGenerateColumns="false"
                DataContext="viewmodel:ScoreViewModel"
                IsReadOnly="true"
                ItemsSource="{Binding}"
                Style="{DynamicResource CustomDataGrid}">
                <DataGrid.Columns>
                    <!--#region Column definitions-->
                    <!--#region Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="id"
                        Width="Auto"
                        Binding="{Binding Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region  Score Number-->
                    <DataGridTextColumn
                        x:Name="ScoreNumber"
                        Width="1*"
                        Binding="{Binding ScoreNumber}"
                        Header="Partituur" />
                    <!--#endregion-->

                    <!--#region  Title-->
                    <DataGridTextColumn
                        x:Name="ScoreName"
                        Width="2.5*"
                        Binding="{Binding ScoreTitle}"
                        Header="Titel" />
                    <!--#endregion-->

                    <!--#region SubTitle (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ScoreSubTitle"
                        Width="Auto"
                        Binding="{Binding ScoreSubTitle}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Composer (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Composer"
                        Width="Auto"
                        Binding="{Binding Composer}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region textWriter (Hidden)-->
                    <DataGridTextColumn
                        x:Name="TextWriter"
                        Width="Auto"
                        Binding="{Binding TextWriter}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Arranger (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Arranger"
                        Width="Auto"
                        Binding="{Binding Arranger}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region RepertoireId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="RepertoireId"
                        Width="Auto"
                        Binding="{Binding RepertoireId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region RepertoireName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="RepertoireName"
                        Width="Auto"
                        Binding="{Binding RepertoireName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region ArchiveId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ArchiveId"
                        Width="Auto"
                        Binding="{Binding ArchiveId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region ArchiveName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ArchiveName"
                        Width="Auto"
                        Binding="{Binding ArchiveName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region GenreId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="GenreId"
                        Width="Auto"
                        Binding="{Binding GenreId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region GenreName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="GenreName"
                        Width="Auto"
                        Binding="{Binding GenreName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region AccompanimentId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="AccompanimentId"
                        Width="Auto"
                        Binding="{Binding AccompanimentId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region AccompanimentName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="AccompanimentName"
                        Width="Auto"
                        Binding="{Binding AccompanimentName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region LanguageId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="LanguageId"
                        Width="Auto"
                        Binding="{Binding LanguageId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region LanguageName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="LanguageName"
                        Width="Auto"
                        Binding="{Binding LanguageName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region DateCreated (Hidden)-->
                    <DataGridTextColumn
                        x:Name="DateCreated"
                        Width="Auto"
                        Binding="{Binding DateCreated}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region DateModified (Hidden)-->
                    <DataGridTextColumn
                        x:Name="DateModified"
                        Width="Auto"
                        Binding="{Binding DateModified}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Checked (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="Checked"
                        Width="Auto"
                        Binding="{Binding Check}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreORP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreORP"
                        Width="Auto"
                        Binding="{Binding MuseScoreORP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreORK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreORK"
                        Width="Auto"
                        Binding="{Binding MuseScoreORK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreTOP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreTOP"
                        Width="Auto"
                        Binding="{Binding MuseScoreTOP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreTOK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreTOK"
                        Width="Auto"
                        Binding="{Binding MuseScoreTOK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFORP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFORP"
                        Width="Auto"
                        Binding="{Binding PDFORP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFORK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFORK"
                        Width="Auto"
                        Binding="{Binding PDFORK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFTOP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFTOP"
                        Width="Auto"
                        Binding="{Binding PDFTOP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFTOK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFTOK"
                        Width="Auto"
                        Binding="{Binding PDFTOK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3B1 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3B1"
                        Width="Auto"
                        Binding="{Binding MP3B1}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3B2 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3B2"
                        Width="Auto"
                        Binding="{Binding MP3B2}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3T1 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3T1"
                        Width="Auto"
                        Binding="{Binding MP3T1}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3T2 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3T2"
                        Width="Auto"
                        Binding="{Binding MP3T2}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3SOL (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3SOL"
                        Width="Auto"
                        Binding="{Binding MP3SOL}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3TOT (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3TOT"
                        Width="Auto"
                        Binding="{Binding MP3TOT}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3PIA (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3PIA"
                        Width="Auto"
                        Binding="{Binding MP3PIA}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreOnline (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreOnline"
                        Width="Auto"
                        Binding="{Binding MuseScoreOnline}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Lyrics (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Lyrics"
                        Width="Auto"
                        Binding="{Binding Lyrics}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresSupplier1 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresSupplier1"
                        Width="Auto"
                        Binding="{Binding NumberScoresSupplier1}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier1Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier1Id"
                        Width="Auto"
                        Binding="{Binding Supplier1Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier1Name (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier1Name"
                        Width="Auto"
                        Binding="{Binding Supplier1Name}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresSupplier2 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresSupplier2"
                        Width="Auto"
                        Binding="{Binding NumberScoresSupplier2}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier2Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier2Id"
                        Width="Auto"
                        Binding="{Binding Supplier2Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier2Name (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier2Name"
                        Width="Auto"
                        Binding="{Binding Supplier2Name}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresSupplier3 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresSupplier3"
                        Width="Auto"
                        Binding="{Binding NumberScoresSupplier3}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier3Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier3Id"
                        Width="Auto"
                        Binding="{Binding Supplier3Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier3Name (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier3Name"
                        Width="Auto"
                        Binding="{Binding Supplier3Name}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresSupplier4 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresSupplier4"
                        Width="Auto"
                        Binding="{Binding NumberScoresSupplier4}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier4Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier4Id"
                        Width="Auto"
                        Binding="{Binding Supplier4Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Supplier4Name (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Supplier4Name"
                        Width="Auto"
                        Binding="{Binding Supplier4Name}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresTotal (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresTotal"
                        Width="Auto"
                        Binding="{Binding NumberScoresTotal}"
                        Visibility="Collapsed" />
                    <!--#endregion-->
                </DataGrid.Columns>
                <!--#endregion-->
            </DataGrid>
            <!--#endregion-->

            <!--#region Tabcontrol defenition-->
            <TabControl
                Grid.Column="1"
                Margin="5"
                DataContext="viewmodel:ScoreViewModel"
                Style="{DynamicResource TabControlStyle}"
                TabStripPlacement="Right">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border
                                        Name="Border"
                                        Margin="0,0,2,5"
                                        Padding="3"
                                        BorderBrush="Gainsboro"
                                        BorderThickness="0,1,1,1"
                                        CornerRadius="0,7,7,0">
                                        <ContentPresenter
                                            x:Name="ContentSite"
                                            Margin="10,2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            ContentSource="Header" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style TargetType="TabControl">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabControl}">
                                    <Grid
                                        x:Name="templateRoot"
                                        ClipToBounds="true"
                                        KeyboardNavigation.TabNavigation="Local"
                                        SnapsToDevicePixels="true">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition x:Name="ColumnDefinition0" />
                                            <ColumnDefinition x:Name="ColumnDefinition1" Width="0" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition x:Name="RowDefinition0" Height="Auto" />
                                            <RowDefinition x:Name="RowDefinition1" Height="*" />
                                        </Grid.RowDefinitions>
                                        <TabPanel
                                            x:Name="headerPanel"
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="2,2,2,0"
                                            Panel.ZIndex="1"
                                            Background="Transparent"
                                            IsItemsHost="true"
                                            KeyboardNavigation.TabIndex="1" />
                                        <Border
                                            x:Name="contentPanel"
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="7, 0, 7, 7"
                                            KeyboardNavigation.DirectionalNavigation="Contained"
                                            KeyboardNavigation.TabIndex="2"
                                            KeyboardNavigation.TabNavigation="Local">
                                            <ContentPresenter
                                                x:Name="PART_SelectedContentHost"
                                                Margin="{TemplateBinding Padding}"
                                                ContentSource="SelectedContent"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="TabStripPlacement" Value="Bottom">
                                            <Setter TargetName="headerPanel" Property="Grid.Row" Value="1" />
                                            <Setter TargetName="contentPanel" Property="Grid.Row" Value="0" />
                                            <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                            <Setter TargetName="RowDefinition1" Property="Height" Value="Auto" />
                                            <Setter TargetName="headerPanel" Property="Margin" Value="2,0,2,2" />
                                        </Trigger>
                                        <Trigger Property="TabStripPlacement" Value="Left">
                                            <Setter TargetName="headerPanel" Property="Grid.Row" Value="0" />
                                            <Setter TargetName="contentPanel" Property="Grid.Row" Value="0" />
                                            <Setter TargetName="headerPanel" Property="Grid.Column" Value="0" />
                                            <Setter TargetName="contentPanel" Property="Grid.Column" Value="1" />
                                            <Setter TargetName="ColumnDefinition0" Property="Width" Value="Auto" />
                                            <Setter TargetName="ColumnDefinition1" Property="Width" Value="*" />
                                            <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                            <Setter TargetName="RowDefinition1" Property="Height" Value="0" />
                                            <Setter TargetName="headerPanel" Property="Margin" Value="2,2,0,2" />
                                        </Trigger>
                                        <Trigger Property="TabStripPlacement" Value="Right">
                                            <Setter TargetName="headerPanel" Property="Grid.Row" Value="0" />
                                            <Setter TargetName="contentPanel" Property="Grid.Row" Value="0" />
                                            <Setter TargetName="headerPanel" Property="Grid.Column" Value="1" />
                                            <Setter TargetName="contentPanel" Property="Grid.Column" Value="0" />
                                            <Setter TargetName="ColumnDefinition0" Property="Width" Value="*" />
                                            <Setter TargetName="ColumnDefinition1" Property="Width" Value="Auto" />
                                            <Setter TargetName="RowDefinition0" Property="Height" Value="*" />
                                            <Setter TargetName="RowDefinition1" Property="Height" Value="0" />
                                            <Setter TargetName="headerPanel" Property="Margin" Value="0,2,2,2" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="false">
                                            <Setter TargetName="templateRoot" Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <!--#endregion-->

                <!--#region TAB: Score Information-->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <Path
                                HorizontalAlignment="Center"
                                Data="{StaticResource score}"
                                Fill="{StaticResource TabItem.Icon.FillBrush}"
                                Stretch="Uniform"
                                Stroke="{StaticResource TabItem.Icon.BorderBrush}"
                                StrokeThickness="0.1" />
                            <Label HorizontalAlignment="Center" HorizontalContentAlignment="Center">
                                <TextBlock HorizontalAlignment="Center">
                                    Partituur<LineBreak />
                                    Informatie</TextBlock>
                            </Label>
                        </StackPanel>
                    </TabItem.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="290" />
                            <RowDefinition Height="120" />
                            <RowDefinition Height="160" />
                        </Grid.RowDefinitions>

                        <!--#region Score Information Section-->
                        <GroupBox
                            Grid.Row="0"
                            Header="Partituur gegevens"
                            Style="{DynamicResource TabItem.Page.GroupBox.Header.Style}">
                            <Grid Margin="7">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--#region Grid Row 0 (Scorenumber, Repertoire and Archive)-->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--#region Score Number-->
                                    <StackPanel Grid.Column="0" Style="{DynamicResource TabItem.Page.StackPanel.Style}">
                                        <TextBlock Style="{DynamicResource TabItem.Page.Label.Style}" Text="Partituur" />
                                        <TextBox
                                            Width="70"
                                            Style="{DynamicResource TabItem.Page.TextBox.Style}"
                                            Text="{Binding ScoreNumber}" />
                                    </StackPanel>
                                    <!--#endregion-->

                                    <!--#region Repertoire-->
                                    <StackPanel Grid.Column="1" Style="{DynamicResource TabItem.Page.StackPanel.Style}">
                                        <TextBlock Style="{DynamicResource TabItem.Page.Label.Style}" Text="Repertoire" />
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox
                                                x:Name="comRepertoire"
                                                Width="120"
                                                HorizontalAlignment="Left">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Margin="2" Text="{Binding RepertoireName}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="{x:Type ComboBoxItem}">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate>
                                                                    <Grid x:Name="cb" TextElement.Foreground="{DynamicResource ComboBox.DropdownList.Foreground}">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="0" />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            Grid.Column="0"
                                                                            Margin="5"
                                                                            Text="{Binding RepertoireId}" />
                                                                        <TextBlock
                                                                            Grid.Column="1"
                                                                            Margin="5"
                                                                            Text="{Binding RepertoireName}" />
                                                                    </Grid>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="ComboBoxItem.IsSelected" Value="True">
                                                                            <Setter TargetName="cb" Property="Background" Value="{DynamicResource ComboBox.DropdownList.Selected.Background}" />
                                                                            <Setter TargetName="cb" Property="TextElement.Foreground" Value="{DynamicResource ComboBox.DropdownList.Selected.Foreground}" />
                                                                        </Trigger>
                                                                        <Trigger Property="ComboBoxItem.IsMouseOver" Value="True">
                                                                            <Setter TargetName="cb" Property="Background" Value="{DynamicResource ComboBox.DropdownList.MouseOver.Background}" />
                                                                            <Setter TargetName="cb" Property="TextElement.Foreground" Value="{DynamicResource ComboBox.DropdownList.MouseOver.Foreground}" />
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ComboBox.ItemContainerStyle>
                                            </ComboBox>
                                            <TextBox Style="{DynamicResource HiddenSettingsTextBox}" Text="{Binding RepertoireId}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <!--#endregion-->

                                    <!--#region Archive-->
                                    <StackPanel Grid.Column="2" Style="{DynamicResource TabItem.Page.StackPanel.Style}">
                                        <TextBlock Style="{DynamicResource TabItem.Page.Label.Style}" Text="Archief" />
                                        <StackPanel Orientation="Horizontal">
                                            <ComboBox
                                                x:Name="comArchive"
                                                Width="120"
                                                HorizontalAlignment="Left">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Margin="2" Text="{Binding ArchiveName}" />
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                                <ComboBox.ItemContainerStyle>
                                                    <Style TargetType="{x:Type ComboBoxItem}">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate>
                                                                    <Grid x:Name="cb" TextElement.Foreground="{DynamicResource ComboBox.DropdownList.Foreground}">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="0" />
                                                                            <ColumnDefinition />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            Grid.Column="0"
                                                                            Margin="5"
                                                                            Text="{Binding ArchiveId}" />
                                                                        <TextBlock
                                                                            Grid.Column="1"
                                                                            Margin="5"
                                                                            Text="{Binding ArchiveName}" />
                                                                    </Grid>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="ComboBoxItem.IsSelected" Value="True">
                                                                            <Setter TargetName="cb" Property="Background" Value="{DynamicResource ComboBox.DropdownList.Selected.Background}" />
