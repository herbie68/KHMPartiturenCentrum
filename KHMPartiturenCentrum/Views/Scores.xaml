<Page
    x:Class="KHMPartiturenCentrum.Views.Scores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:KHMPartiturenCentrum.ViewModels"
    Title="Scores"
    d:DataContext="{d:DesignInstance Type=viewmodel:ScoreViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1600"
    DataContext="viewmodel:ScoreViewModel"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--#region Header-->
        <Border
            Grid.Row="0"
            Height="50"
            Margin="10"
            Padding="0"
            Background="{DynamicResource Header.BackGround}"
            BorderBrush="{DynamicResource Header.BorderBrush}"
            BorderThickness=".5"
            CornerRadius="10">

            <StackPanel Orientation="Horizontal">
                <Image
                    Height="30"
                    Margin="5,0,5,0"
                    Source="..\Resources\Images\logo.png" />
                <Label
                    Margin="0,3"
                    HorizontalAlignment="Center"
                    Content="Partituren overzicht"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{DynamicResource Header.Title.TextColor}" />
            </StackPanel>
        </Border>
        <!--#endregion-->

        <!--#region Action Buttons-->
        <Grid
            Grid.Row="1"
            Margin="25,0,25,0"
            Loaded="PageLoaded">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--#region Hidden fields section-->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal" >
                <TextBox x:Name="tbCurrentItem" Visibility="Collapsed"/>
                <CheckBox x:Name="cbRepertoire" Visibility="Collapsed"/>
                <CheckBox x:Name="cbArchive" Visibility="Collapsed"/>
                <CheckBox x:Name="cbByHeart" Visibility="Collapsed"/>
                <CheckBox x:Name="cbTitle" Visibility="Visible"/>
                <CheckBox x:Name="cbSubTitle" Visibility="Collapsed"/>
                <CheckBox x:Name="cbComposer" Visibility="Collapsed"/>
                <CheckBox x:Name="cbTextwriter" Visibility="Collapsed"/>
                <CheckBox x:Name="cbArranger" Visibility="Collapsed"/>
                <CheckBox x:Name="cbGenre" Visibility="Collapsed"/>
                <CheckBox x:Name="cbAcompaniment" Visibility="Collapsed"/>
                <CheckBox x:Name="cbLanguage" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMusicPiece" Visibility="Collapsed"/>
                <CheckBox x:Name="cbDigitized" Visibility="Collapsed"/>
                <CheckBox x:Name="cbModified" Visibility="Collapsed"/>
                <CheckBox x:Name="cbChecked" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPDFORP" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPDFORK" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPDFTOP" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPDFTOK" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMSCORP" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMSCORK" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMSCTOP" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMSCTOK" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMP3B1" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMP3B2" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMP3T1" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMP3T2" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMP3SOL" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMP3TOT" Visibility="Collapsed"/>
                <CheckBox x:Name="cbMP3PIA" Visibility="Collapsed"/>
                <CheckBox x:Name="cbOnline" Visibility="Collapsed"/>
                <CheckBox x:Name="cbLyrics" Visibility="Collapsed"/>
                <CheckBox x:Name="cbNotes" Visibility="Collapsed"/>
                <CheckBox x:Name="cbNumberPublisher1" Visibility="Collapsed"/>
                <CheckBox x:Name="cbNumberPublisher2" Visibility="Collapsed"/>
                <CheckBox x:Name="cbNumberPublisher3" Visibility="Collapsed"/>
                <CheckBox x:Name="cbNumberPublisher4" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPublisher1" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPublisher2" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPublisher3" Visibility="Collapsed"/>
                <CheckBox x:Name="cbPublisher4" Visibility="Collapsed"/>
            </StackPanel>
            <!--#endregion-->

            <!--#region Button section-->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="btnFirst"
                    Width="30"
                    Height="30"
                    Padding="5"
                    Click="BtnFirstClick"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Navigate}"
                    ToolTip="Eerste partituur"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource first}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Navigate.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnPrev"
                    Width="30"
                    Height="30"
                    Padding="5"
                    Click="BtnPreviousClick"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Navigate}"
                    ToolTip="Vorige partituur"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource previous}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Navigate.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnNext"
                    Width="30"
                    Height="30"
                    Padding="5"
                    Click="BtnNextClick"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Navigate}"
                    ToolTip="Volgende partituur"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource next}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Navigate.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnLast"
                    Width="30"
                    Height="30"
                    Padding="5"
                    Click="BtnLastClick"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Navigate}"
                    ToolTip="Laatste partituur"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource last}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Navigate.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnSave"
                    Width="30" Margin="10,0,10,0"
                    Height="30"
                    Padding="4"
                    CommandParameter="{Binding SelectedItem, ElementName=ScoresDataGrid}"
                    IsEnabled="False"
                    Style="{DynamicResource DataGrid.Button.Save}"
                    ToolTip="Er zijn geen gegevens aangepast, opslaan niet mogelijk"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource save}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Save.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnAdd"
                    Width="30"
                    Height="30" Margin="0,0,10,0"
                    Padding="4"
                    CommandParameter="{Binding SelectedItem, ElementName=ScoresDataGrid}"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Add}"
                    ToolTip="Nieuwe Sub-partituur toevoegen"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource newscore}"
                        Fill="{StaticResource Button.Add.BorderBrush}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Add.BorderBrush}" />
                </Button>

                <Button
                    x:Name="btnDelete"
                    Width="30"
                    Height="30"
                    Padding="4"
                    CommandParameter="{Binding SelectedItem, ElementName=ScoresDataGrid}"
                    IsEnabled="True"
                    Style="{DynamicResource DataGrid.Button.Add}"
                    ToolTip="Geselecteerde partituur verwijderen"
                    ToolTipService.ShowOnDisabled="True">
                    <Path
                        Data="{StaticResource delete}"
                        Stretch="Uniform"
                        Stroke="{StaticResource Button.Delete.BorderBrush}" />
                </Button>


            </StackPanel>
            <!--#endregion-->
        </Grid>
        <!--#endregion-->

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--#region Datagrid Scores-->
            <DataGrid
                x:Name="ScoresDataGrid"
                Grid.Column="0"
                Margin="0,5,0,4"
                Padding="5,0,5,0"
                AlternationCount="1"
                AutoGenerateColumns="false"
                IsReadOnly="true"
                ItemsSource="{Binding Scores}"
                SelectionChanged="SelectedScoreChanged"
                SelectionMode="Single"
                Style="{DynamicResource CustomDataGrid}">

                <!--#region Context Menu-->
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Nieuwe partituur toevoegen" />
                        <MenuItem Header="Nieuwe Kerst partituur toevoegen" />
                        <Separator />
                        <MenuItem Header="Sub partituur voor geselecteerde partituur maken" />
                        <Separator />
                        <MenuItem Header="Verwijder geselecteerde partituur" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <!--#endregion-->
                <DataGrid.Columns>
                    <!--#region Column definitions-->
                    <!--#region Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="id"
                        Width="Auto"
                        Binding="{Binding ScoreId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region  Score Number (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ScoreNumber"
                        Width="1*"
                        Binding="{Binding ScoreNumber}"
                        Header="PartituurNummer"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region  Score SubNumber (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ScoreSubNumber"
                        Width="1*"
                        Binding="{Binding ScoreSubNumber}"
                        Header="Partituur"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region  Score Number-->
                    <DataGridTextColumn
                        x:Name="Score"
                        Width="1*"
                        Binding="{Binding Score}"
                        Header="Partituur" />
                    <!--#endregion-->

                    <!--#region  Title-->
                    <DataGridTextColumn
                        x:Name="ScoreName"
                        Width="2.5*"
                        Binding="{Binding ScoreTitle}"
                        Header="Titel" />
                    <!--#endregion-->

                    <!--#region SubTitle (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ScoreSubTitle"
                        Width="Auto"
                        Binding="{Binding ScoreSubTitle}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Composer (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Composer"
                        Width="Auto"
                        Binding="{Binding Composer}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region TextWriter (Hidden)-->
                    <DataGridTextColumn
                        x:Name="TextWriter"
                        Width="Auto"
                        Binding="{Binding TextWriter}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Arranger (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Arranger"
                        Width="Auto"
                        Binding="{Binding Arranger}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region RepertoireId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="RepertoireId"
                        Width="Auto"
                        Binding="{Binding RepertoireId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region RepertoireName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="RepertoireName"
                        Width="Auto"
                        Binding="{Binding RepertoireName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region ArchiveId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ArchiveId"
                        Width="Auto"
                        Binding="{Binding ArchiveId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region ArchiveName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="ArchiveName"
                        Width="Auto"
                        Binding="{Binding ArchiveName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region GenreId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="GenreId"
                        Width="Auto"
                        Binding="{Binding GenreId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region GenreName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="GenreName"
                        Width="Auto"
                        Binding="{Binding GenreName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region AccompanimentId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="AccompanimentId"
                        Width="Auto"
                        Binding="{Binding AccompanimentId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region AccompanimentName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="AccompanimentName"
                        Width="Auto"
                        Binding="{Binding AccompanimentName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region LanguageId (Hidden)-->
                    <DataGridTextColumn
                        x:Name="LanguageId"
                        Width="Auto"
                        Binding="{Binding LanguageId}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region LanguageName (Hidden)-->
                    <DataGridTextColumn
                        x:Name="LanguageName"
                        Width="Auto"
                        Binding="{Binding LanguageName}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region DateCreated (Hidden)-->
                    <DataGridTextColumn
                        x:Name="DateCreated"
                        Width="Auto"
                        Binding="{Binding DateCreated}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region DateModified (Hidden)-->
                    <DataGridTextColumn
                        x:Name="DateModified"
                        Width="Auto"
                        Binding="{Binding DateModified}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Checked (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="Checked"
                        Width="Auto"
                        Binding="{Binding Check}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Sing By Heart (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="BYHEART"
                        Width="Auto"
                        Binding="{Binding ByHeart}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreORP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreORP"
                        Width="Auto"
                        Binding="{Binding MuseScoreORP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreORK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreORK"
                        Width="Auto"
                        Binding="{Binding MuseScoreORK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreTOP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreTOP"
                        Width="Auto"
                        Binding="{Binding MuseScoreTOP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreTOK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreTOK"
                        Width="Auto"
                        Binding="{Binding MuseScoreTOK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFORP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFORP"
                        Width="Auto"
                        Binding="{Binding PDFORP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFORK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFORK"
                        Width="Auto"
                        Binding="{Binding PDFORK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFTOP (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFTOP"
                        Width="Auto"
                        Binding="{Binding PDFTOP}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region PDFTOK (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="PDFTOK"
                        Width="Auto"
                        Binding="{Binding PDFTOK}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3B1 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3B1"
                        Width="Auto"
                        Binding="{Binding MP3B1}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3B2 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3B2"
                        Width="Auto"
                        Binding="{Binding MP3B2}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3T1 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3T1"
                        Width="Auto"
                        Binding="{Binding MP3T1}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3T2 (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3T2"
                        Width="Auto"
                        Binding="{Binding MP3T2}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3SOL (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3SOL"
                        Width="Auto"
                        Binding="{Binding MP3SOL}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3TOT (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3TOT"
                        Width="Auto"
                        Binding="{Binding MP3TOT}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MP3PIA (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MP3PIA"
                        Width="Auto"
                        Binding="{Binding MP3PIA}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region MuseScoreOnline (Hidden)-->
                    <DataGridCheckBoxColumn
                        x:Name="MuseScoreOnline"
                        Width="Auto"
                        Binding="{Binding MuseScoreOnline}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Lyrics (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Lyrics"
                        Width="Auto"
                        Binding="{Binding Lyrics}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Music Piece (Hidden)-->
                    <DataGridTextColumn
                        x:Name="MusinPiece"
                        Width="Auto"
                        Binding="{Binding MusicPiece}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Notes (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Notes"
                        Width="Auto"
                        Binding="{Binding Notes}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresPublisher1 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresPublisher1"
                        Width="Auto"
                        Binding="{Binding NumberScoresPublisher1}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher1Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Publisher1Id"
                        Width="Auto"
                        Binding="{Binding Publisher1Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher1Name (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Publisher1Name"
                        Width="Auto"
                        Binding="{Binding Publisher1Name}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresPublisher2 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresPublisher2"
                        Width="Auto"
                        Binding="{Binding NumberScoresPublisher2}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher2Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Publisher2Id"
                        Width="Auto"
                        Binding="{Binding Publisher2Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher2Name (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Publisher2Name"
                        Width="Auto"
                        Binding="{Binding Publisher2Name}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresPublisher3 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresPublisher3"
                        Width="Auto"
                        Binding="{Binding NumberScoresPublisher3}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher3Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Publisher3Id"
                        Width="Auto"
                        Binding="{Binding Publisher3Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher3Name (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Publisher3Name"
                        Width="Auto"
                        Binding="{Binding Publisher3Name}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region NumberScoresPublisher4 (Hidden)-->
                    <DataGridTextColumn
                        x:Name="NumberScoresPublisher4"
                        Width="Auto"
                        Binding="{Binding NumberScoresPublisher4}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher4Id (Hidden)-->
                    <DataGridTextColumn
                        x:Name="Publisher4Id"
                        Width="Auto"
                        Binding="{Binding Publisher4Id}"
                        Visibility="Collapsed" />
                    <!--#endregion-->

                    <!--#region Publisher4Name (Hidden)-->
